# MCP Server Environment Configuration
# Copy this file to .env in the mcp_server directory for local development
# For Cloud Run deployment, these variables are set via --set-env-vars

# =============================================================================
# Cloud Run Configuration
# =============================================================================
# Set to true when running in Cloud Run environment
CLOUD_RUN_MODE=false

# HTTP server configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=8080

# =============================================================================
# CloudSQL Database Configuration
# =============================================================================
# Database connection details
DB_USER=finadvisor_user
DB_PASSWORD=FinAdvisorUser2024!
DB_NAME=FinAdvisor
DB_HOST=34.29.136.71
DB_PORT=5432

# CloudSQL instance connection name
CLOUDSQL_CONNECTION_NAME=agent-space-demo-475212:us-central1:finadvisor-db

# =============================================================================
# CloudSQL Private IP Configuration (for VPC connector)
# =============================================================================
# Set to true to use private IP via VPC connector
USE_PRIVATE_IP=false

# Private IP address (set automatically when CloudSQL private IP is enabled)
CLOUDSQL_PRIVATE_IP=

# =============================================================================
# VPC Configuration
# =============================================================================
# VPC network name
VPC_NETWORK_NAME=finadvisor-vpc

# VPC connector name
VPC_CONNECTOR_NAME=finadvisor-vpc-connector

# =============================================================================
# Service Configuration
# =============================================================================
# MCP service name for Cloud Run deployment
MCP_SERVICE_NAME=finadvisor-mcp-server

# Service account for Cloud Run
MCP_SERVICE_ACCOUNT=finadvisor-mcp-server

# CloudSQL instance name
CLOUDSQL_INSTANCE_NAME=finadvisor-db

# =============================================================================
# Development Configuration
# =============================================================================
# Set to true for development mode (enables debug logging)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Security Configuration
# =============================================================================
# CORS origins (comma-separated list)
# For production, specify exact origins instead of "*"
CORS_ORIGINS=*

# Enable/disable CORS
ENABLE_CORS=true
